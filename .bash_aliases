# Add colors
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# aliases for ls
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'

# misc
alias g++='g++ -std=c++17 -o out'
alias g11='g++-11 -std=c++20 -pthread -o out'
alias ghc='ghc -o out'

# useful aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias cs='clear'

# aliases for vim
alias vi='vim'
alias vim='vim -p'

#aliases for git
alias ga='git add'
alias gs='git status'
alias gss='gs -s'
alias gl='git log --graph'
alias gls='gl --pretty=oneline'
alias glss='gls -10'
alias gc='git commit'
alias gcm='gc -m'
